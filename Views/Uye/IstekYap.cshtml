<form action="/Uye/Istek" method="post">
    <div class="col-md-12 col-sm-6">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2" style="font-weight:bolder">
                    Materyal Bilgileri
                </div>
            </div>
            <div class="block-content-outer" style="padding-top:0">
                <div class="block-content-inner">
                   

                        <div class="form-group">
                            <label for="İsim" style="font-weight:bolder">Materyal İsmi</label>
                            <input type="text" class="form-control" id="İsim" placeholder="İsim" name="name">
                        </div>

                        <div class="form-group">
                            <label for="yazar" style="font-weight:bolder">Yazar İsmi</label>
                            <input type="text" class="form-control" id="yazar" placeholder="Yazar" name="author">
                        </div>

                     

                        <button type="submit" style="font-size: x-large" class="btn btn-danger rounded">İSTEK YAP</button>
                    
                </div>
            </div>
        </div>
    </div>

</form>





