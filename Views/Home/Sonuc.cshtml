
@{
    ViewBag.Title = "Sonuc";
}
@using softptoject.App_Classes
@model List<MaterialC>

@section head{

    <li class="menu-item-top" style="float: right">
        <a href="/Home/Anasayfa" class="top">
            <span class="main-menu-icon">
                <span aria-hidden="true" class="icon icon-grid-big icon-size-medium"></span>
            </span>
            <span class="main-menu-text">Giris Yap</span>
        </a>
    </li>

}
<div class="row">
    
    <div class="col-md-12">
        <div class="block">
            
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Adı</th>
                            <th>Yazarı</th>
                            <th>ISBN</th>
                            <th>Yayınevi</th>
                            <th>Kategori</th>
                            <th>Tür</th>                           
                            <th>Dil</th>
                           
                        </tr>
                        </thead>
                        <tbody>
                      

                        @foreach (MaterialC m in Model)
                        {
                            <tr>
                                <td>@m.MaterialId</td>                             
                                <td>@m.MaterialName</td>
                                <td>@m.AuthorsName</td>
                                <td>@m.ISBN</td>
                                <td>@m.PublisherName</td>
                                <td>@m.CategoryName</td>
                                <td>@m.TypeName</td>
                                <td>@m.LanguageName</td>                                                                                   
                            </tr>

                        }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>